.date
	margin-top 80px
	display block

	&__label
		display flex
		align-items flex-end
		font-size 22px
		font-weight 700

	&__input
		margin-top -3px
		margin-left 20px
		padding 0 13px 4px
		width 220px
		font-family 'Courier New'
		font-size 30px
